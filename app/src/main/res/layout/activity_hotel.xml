<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hotelImage"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:padding="10dp"
            android:src="@drawable/ic_action_navigation_close"
            tools:srcCompat="@drawable/ic_action_navigation_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/hotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="Hotel Name"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="New Member? Register Here"
                android:textAlignment="center"
                android:textColor="#B50202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wifiTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="New Member? Register Here"
                android:textAlignment="center"
                android:textColor="#B50202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/poolText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="New Member? Registaser Here"
                android:textAlignment="center"
                android:textColor="#B50202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="New Member? sdas s"
                android:textAlignment="center"
                android:textColor="#B50202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/gray_shape">

                <TextView
                    android:padding="5dp"
                    android:id="@+id/hotelDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdasdasd"
                    android:textSize="20sp" />

<!--                <EditText-->
<!--                    android:enabled="false"-->
<!--                    android:id="@+id/editTextTextMultiLine"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    android:ems="10"-->
<!--                    android:gravity="start|top"-->
<!--                    android:inputType="textMultiLine"-->
<!--                    android:text="ssdasdasdasdasdasdasd" />-->
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>